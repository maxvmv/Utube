@model IEnumerable<Utube.Models.Video>

@{
    ViewBag.Title = "Ссылки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ссылки</h2>

<p>
    @Html.ActionLink("Новая ссылка", "Create", null , new { @class = "btn btn-success" })
</p>




<table class="table">   
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Videotitle)*@
            Название ссылки
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Vlink)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Shared)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datein)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Like)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dislike)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Profileid)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Views)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Info)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Videotitle)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Vlink)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Shared)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datein)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Like)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dislike)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Profileid)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Views)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>*@
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
        </td>
        <td>
            @Html.ActionLink("Подробно", "ShowVideo", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
